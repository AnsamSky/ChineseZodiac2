<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/periods"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_weight="1"
        android:text="第34期"
        android:textColor="@color/colorBlue"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/shu"

        android:layout_width="30dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@drawable/shaper_boder"
        android:gravity="center"
        android:padding="5dp"
        android:text="鼠"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@+id/periods" />

    <TextView
        android:id="@+id/niu"
        android:layout_width="30dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@drawable/shaper_boder"
        android:gravity="center"
        android:padding="5dp"
        android:text="牛"
        android:textSize="16sp"
        app:layout_constraintLeft_toRightOf="@+id/shu"
        app:layout_constraintTop_toBottomOf="@+id/periods" />

    <TextView
        android:id="@+id/hu"
        android:layout_width="30dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@drawable/shaper_boder"
        android:gravity="center"
        android:padding="5dp"
        android:text="虎"
        android:textSize="16sp"
        app:layout_constraintLeft_toRightOf="@+id/niu"
        app:layout_constraintTop_toBottomOf="@+id/periods" />

    <TextView
        android:id="@+id/tu"
        android:layout_width="30dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@drawable/shaper_boder"
        android:gravity="center"
        android:padding="5dp"
        android:text="兔"
        android:textSize="16sp"
        app:layout_constraintLeft_toRightOf="@+id/hu"

        app:layout_constraintTop_toBottomOf="@+id/periods"

        />

    <TextView
        android:id="@+id/longg"
        android:layout_width="30dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@drawable/shaper_boder"
        android:gravity="center"
        android:padding="5dp"
        android:text="龙"
        android:textSize="16sp"
        app:layout_constraintLeft_toRightOf="@+id/tu"
        app:layout_constraintTop_toBottomOf="@+id/periods"

        />

    <TextView
        android:id="@+id/she"
        android:layout_width="30dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@drawable/shaper_boder"
        android:gravity="center"
        android:padding="5dp"
        android:text="蛇"
        android:textSize="16sp"
        app:layout_constraintLeft_toRightOf="@+id/longg"
        app:layout_constraintTop_toBottomOf="@+id/periods" />

    <TextView
        android:id="@+id/ma"
        android:layout_width="30dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
