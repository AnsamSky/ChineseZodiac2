        android:gravity="center"
        android:padding="5dp"
        android:text="马"
        android:textSize="16sp"
        app:layout_constraintLeft_toRightOf="@+id/she"
        app:layout_constraintTop_toBottomOf="@+id/periods"

        />

    <TextView
        android:id="@+id/yang"
        android:layout_width="30dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@drawable/shaper_boder"
        android:gravity="center"
        android:padding="5dp"
        android:text="羊"
        android:textSize="16sp"
        app:layout_constraintLeft_toRightOf="@+id/ma"
        app:layout_constraintTop_toBottomOf="@+id/periods"

        />

    <TextView
        android:id="@+id/hou"
        android:layout_width="30dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@drawable/shaper_boder"
        android:gravity="center"
        android:padding="5dp"
        android:text="猴"
        android:textSize="16sp"
        app:layout_constraintLeft_toRightOf="@+id/yang"
        app:layout_constraintTop_toBottomOf="@+id/periods"

        />

    <TextView
        android:id="@+id/ji"
        android:layout_width="30dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@drawable/shaper_boder"
        android:gravity="center"
        android:padding="5dp"
        android:text="鸡"
        android:textSize="16sp"
        app:layout_constraintLeft_toRightOf="@+id/hou"
        app:layout_constraintTop_toBottomOf="@+id/periods" />

    <TextView
        android:id="@+id/gou"
        android:layout_width="30dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@drawable/shaper_boder"
        android:gravity="center"
        android:padding="5dp"
        android:text="狗"
        android:textSize="16sp"
        app:layout_constraintLeft_toRightOf="@+id/ji"
        app:layout_constraintTop_toBottomOf="@+id/periods" />

    <TextView
        android:id="@+id/zhu"
        android:layout_width="30dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@drawable/shaper_boder"
        android:gravity="center"
        android:padding="5dp"
        android:text="猪"
        android:textSize="16sp"
        app:layout_constraintLeft_toRightOf="@+id/gou"
        app:layout_constraintTop_toBottomOf="@+id/periods" />

    <!--第二行-->
